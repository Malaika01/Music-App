<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="5"
    android:orientation="vertical"
    tools:context=".MainActivity8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="47dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.1"
            android:src="@drawable/arrow_back">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.1"
            android:text="Upload Music"
            android:textColor="#FFFF"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.1"
            android:text="Next"
            android:textColor="#F9A825"
            android:textSize="20dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1.7">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="180dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/square1">

            </ImageView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/upload">

            </ImageView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/rectangle6"></ImageView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:text="Title"
                android:textColor="#F9D625"
                android:textSize="25dp"></EditText>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/rectangle6"></ImageView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:text="Genre"
                android:textColor="#F9D625"
                android:textSize="25dp"></EditText>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/rectangle7"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:text="Description"
                android:textColor="#F9D625"
                android:textSize="25dp"></TextView>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="horizontal"
        android:weightSum="0.2"
        android:layout_weight="0.8">
        <Button
            android:layout_weight="0.1"
            android:layout_width="100dp"
            android:layout_marginLeft="40dp"
            android:layout_height="60dp"
            android:textColor="#FFFF"
            android:textSize="15dp"
            android:text="Upload"

            android:backgroundTint="#F9C425">

        </Button>
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Record"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#CD322929"
        android:weightSum="0.3"
        android:orientation="vertical"
        android:layout_weight="0.8">
        <RelativeLayout
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fav"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/fav"></ImageView>

            <ImageView
                android:id="@+id/add"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/fav"
                android:src="@drawable/add3"></ImageView>

            <ImageView
                android:id="@+id/search"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/add"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/search"></ImageView>
            <ImageView
                android:id="@+id/later"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/search"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/later"></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <TextView
                android:id="@+id/liked1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Liked"
                android:textColor="@color/white"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:id="@+id/add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_toEndOf="@id/liked1"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/search1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_toEndOf="@id/add1"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/later1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toEndOf="@id/search1"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>