<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".MainActivity14">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.1"
            android:text="Song Title"
            android:textColor="#FFFF"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tenth"
            android:layout_marginLeft="100dp">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.1"
            android:text="By Artist"
            android:textColor="#F4C725"
            android:textSize="30dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/eigth">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="1">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="100dp"
            android:src="@drawable/prev"></ImageView>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.1"
            android:src="@drawable/play"></ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:layout_marginTop="10dp"
            android:src="@drawable/next"></ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:src="@drawable/ninth">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:textColor="#F9A825"
            android:text="1:25">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="1">


        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:background="#CD322929"
            android:weightSum="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:src="@drawable/fav"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.5"
                android:text="Liked"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="100dp"
            android:orientation="vertical"

            android:weightSum="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:src="@drawable/add3"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.5"
                android:text="Add"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:background="#CD322929"
            android:weightSum="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/search"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:background="#CD322929"
            android:weightSum="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/later"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>