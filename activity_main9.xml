<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".MainActivity9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.2">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="47dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.1"
            android:src="@drawable/arrow_back">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:textSize="40dp"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Record"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="470dp"
            android:layout_height="200dp"
            android:src="@drawable/eigth">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3.2"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:src="@drawable/record">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_weight="0.25"
        android:weightSum="1">


    <LinearLayout
        android:layout_weight="0.25"
        android:layout_width="100dp"
        android:orientation="vertical"
        android:background="#CD322929"
        android:weightSum="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/fav"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.5"
            android:text="Liked"
            android:textColor="@color/white"
            android:textSize="15dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.25"
        android:layout_width="100dp"
        android:orientation="vertical"

        android:weightSum="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/add3"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.5"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="15dp">

        </TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:background="#CD322929"
            android:weightSum="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/search"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.5"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:background="#CD322929"
            android:weightSum="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/later"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>